<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.user.makevent.MainActivity">

    <LinearLayout
        android:layout_height="150px"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:background="@drawable/youtube"/>

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="220dp"
            android:paddingRight="1dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingRight="1dp"
            android:src="@drawable/ic_more_vert_black_24dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_height="400dp"
        android:layout_width="match_parent">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:paddingTop="1dp">

        <ListView
            android:layout_width="70px"
            android:layout_height="120px"
            android:background="@drawable/ic_favorite_border_white_24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80px"/>

        <ListView
            android:layout_width="70px"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:background="@drawable/ic_explore_white_24dp"
            android:contentDescription="@string/Button_name"
            android:layout_marginLeft="110px"/>

        <ListView
            android:layout_width="70px"
            android:layout_height="100px"
            android:background="@drawable/ic_room_white_24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="110px"/>

        <ListView
            android:layout_width="70px"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:background="@drawable/ic_account_circle_white_24dp"
            android:layout_marginLeft="110px"/>

    </LinearLayout>
</LinearLayout>